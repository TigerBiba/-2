        <TextBlock x:Name="tblOtvet" HorizontalAlignment="Left" Margin="27,225,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="80" Width="446"/>
        <Button x:Name="btnOtvet" Content="Решить" HorizontalAlignment="Left" Margin="171,165,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="34" Width="158" Click="btnOtvet_Click"/>
        <TextBox x:Name="tbText" HorizontalAlignment="Left" Margin="27,66,0,0" TextWrapping="Wrap" Text="Введите ваш текст" VerticalAlignment="Top" Width="446" Grid.ColumnSpan="2" Height="80"/>

    </Grid>
</Window>
